{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/crypto-utils/(.*)": "<rootDir>/libs/crypto-utils/src/$1",
    "@app/logger/(.*)": "<rootDir>/libs/logger/src/$1"
  }
}
